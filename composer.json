{
  "name": "sharifuddin/laravel-smart-search",
  "description": "A smart search helper for Laravel. Provides advanced Eloquent search with relation discovery and multiple search modes.",
  "type": "library",
  "keywords": [
    "laravel",
    "search",
    "eloquent",
    "smart-search",
    "relations",
    "full-text",
    "database",
    "query-builder",
    "filter",
    "laravel-smart-search",
    "laravel-search",
    "eloquent-search"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Sharif Uddin",
      "email": "sharif.webpro@gmail.com",
      "role": "Developer",
      "homepage": "https://sharifwebdev.github.io/"
    }
  ],
  "require": {
    "php": "^8.1",
    "laravel/framework": "^10.0|^11.0|^12.0"
  },
  "require-dev": {
    "orchestra/testbench": "^8.0",
    "phpunit/phpunit": "^10.0",
    "laravel/pint": "^1.0",
    "nunomaduro/collision": "^7.0",
    "spatie/laravel-ray": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "Sharifuddin\\LaravelSmartSearch\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Sharifuddin\\LaravelSmartSearch\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Sharifuddin\\LaravelSmartSearch\\SmartSearchServiceProvider"
      ],
      "aliases": {
        "SmartSearch": "Sharifuddin\\LaravelSmartSearch\\Facades\\SmartSearch"
      }
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit",
    "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
    "analyse": "vendor/bin/phpstan analyse",
    "format": "vendor/bin/pint"
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
